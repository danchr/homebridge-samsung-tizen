                "ARROW_RIGHT": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
                    }
                },
                "SELECT": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
                    }
                },
                "BACK": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
                    }
                },
                "EXIT": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
                    }
                },
                "PLAY_PAUSE": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
