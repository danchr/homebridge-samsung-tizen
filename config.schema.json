{
    "pluginAlias": "SamsungTizen",
    "pluginType": "platform",
    "headerDisplay": "See [homebridge-samsung-tizen/wiki/Configuration](https://github.com/tavicu/homebridge-samsung-tizen/wiki/Configuration) for more information and instructions.",
    "singular": true,
    "schema": {
        "name": {
            "title": "Name",
            "type": "string",
            "default": "SamsungTizen",
            "description": "Plugin name as displayed in the homebridge log.",
            "required": true
        },
        "keys": {
            "title": "Global Keys",
            "type": "object",
            "properties": {
                "REWIND": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
                    }
                },
                "FAST_FORWARD": {
                    "type": "array",
                    "title": "Command",
                    "items": {
                        "type": "string"
                    }
                },
                "NEXT_TRACK": {
                    "type": "array",
                    "title": "Command",
