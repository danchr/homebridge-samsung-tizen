                                }
                            },
                            "SELECT": {
                                "type": "array",
                                "title": "Command",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "BACK": {
                                "type": "array",
                                "title": "Command",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "EXIT": {
                                "type": "array",
                                "title": "Command",
